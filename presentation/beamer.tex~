\vspace{10pt}
%\pause
\begin{block}{}
\begin{equation*}
G_{rs}(t,t')=\int dt''\left[G^{(2)}_{rs}(t,t'')G^{(1)}_{ss}(t'',t')+e^{i\theta}G^{(2)}_{rr}(t,t'')G^{(1)}_{rs}(t'',t')\right]
\end{equation*}
\end{block}

\vspace{10pt}
{\bf Mach-Zehnder interferometry analogy:} Each stage behaves like a frequency-shifting 50/50 beamsplitter.
\begin{figure}[htb]
\centering
\includegraphics[width=2.in]{../figures/TMI_MZ_fio2.png}
\end{figure}

\end{frame}

\subsection{Configurations}

\begin{frame}
\begin{figure}[htb]
\centering
\includegraphics[width=4.in]{../figures/TMI_sch2}\footnotemark\\
\end{figure}
\vspace{10pt}
\begin{block}{}
{\bf Reverse collision (RC)} configuration: $\beta_r^{'(1)}=\beta_s^{'(2)}$, $\beta_s^{'(1)}=\beta_r^{'(2)}$.\\

\begin{center}$|\rho_1|^2=0.9975$, $|\rho_2|^2=0.0110$\end{center}
\end{block}
\begin{block}{}
{\bf Double collision (DC)} configuration: Identical media, with time-delays inbetween.\\

\begin{center}$|\rho_1|^2=0.9957$, $|\rho_2|^2=0.0134$\end{center}
\end{block}
\footnotetext{D. V. Reddy, M. G. Raymer, and C. J. McKinstrie, Opt. Lett. 39, 2924 (2014).}
\end{frame}

