\section{Temporal modes}

\subsection{Problem motivation}

\begin{frame}

\begin{figure}[htb]
\centering
\includegraphics[width=4.in]{../figures/TMI_mythical}
\end{figure}

\begin{block}{Problem Statement}
Design a device that can separate an arbitrary {\bf Temporal mode} component from an optical signal (classical or quantum) pulse with 100\% or near-100\% fidelity.
\end{block}

\end{frame}



\begin{frame}{Existing types of optical multiplexing}
\begin{columns}
\begin{column}{.3\linewidth}
\begin{figure}[htb]
\centering
Polarization
\includegraphics[width=1.4in]{../figures/polarization.jpg}
\end{figure}
\end{column}
\begin{column}{.7\linewidth}
\begin{figure}[htb]
\centering
Transverse modes\\
\vspace{2ex}
\includegraphics[width=2.in]{../figures/fmodes02.jpg}
\end{figure}
\end{column}
\end{columns}
\vspace{2ex}
\begin{figure}[htb]
\centering
Time-division, and Wavelength-division multiplexing\\
\vspace{2ex}
\includegraphics[width=3.5in]{../figures/tdmwdm}
\end{figure}
\end{frame}

\begin{frame}{Definition of temporal modes}

Monochromatic mode: $\quad|1\rangle_{\omega}=\widehat{a}^\dagger(\omega)|0\rangle,\quad \left[\widehat{a}(\omega),\widehat{a}^\dagger(\omega')\right]=2\pi\delta^3(\omega-\omega').$\\\vspace{5pt}
Arbitrary mode: $\quad\quad\quad\quad|1\rangle_{j}=\widehat{b}^\dagger_{j}|0\rangle,\quad\quad\left[\widehat{b}_{j},\widehat{b}^\dagger_{m}\right]=\delta_{j,m}.$\\\vspace{5pt}
\begin{center}$\widehat{b}_{j}=\int\frac{d\omega}{2\pi}U^*_j(\omega)\widehat{a}(\omega)$\end{center}
\vspace{-2pt}
\begin{columns}
\begin{column}{.5\linewidth}
\begin{figure}[htb]
\centering
Time domain electric field
\includegraphics[width=1.1in]{../figures/pherG_time.png}
\end{figure}
\end{column}
\begin{column}{.5\linewidth}
\begin{figure}[htb]
\centering
Spectra in frequency domain
\includegraphics[width=1.1in]{../figures/pherG_freq.png}
\end{figure}
\end{column}
\end{columns}

\end{frame}

\section{Optical nonlinearity}

\subsection{Quantum frequency conversion}
\begin{frame}{Quantum frequency conversion\footnotemark[1]}

\begin{columns}
\begin{column}{.5\linewidth}
\begin{figure}[htb]
\centering
\includegraphics[width=1.6in]{../figures/sfg.png}
\end{figure}
\end{column}
\begin{column}{.5\linewidth}
\begin{figure}[htb]
\centering
\includegraphics[width=1.6in]{../figures/dfg.png}
\end{figure}
\end{column}
\end{columns}
\begin{gather*}
P(t) = \chi^{(1)}E(t)+\chi^{(2)}E^2(t)+\chi^{(3)}E^3(t)+...\\
\nabla^2{\mathbf E}-\frac{n^2}{c^2}\partial_t^2{\mathbf E}=\frac{4\pi}{c^2}\partial^2_t{\mathbf P^{NL}}
\end{gather*}
\vspace{-10pt}
\begin{columns}
\begin{column}{.5\linewidth}
\begin{figure}[htb]
\centering
\includegraphics[width=2in]{../figures/bulk_beta.png}
\end{figure}
\end{column}
\begin{column}{.5\linewidth}
\begin{figure}[htb]
\centering
Periodically poled waveguide
\includegraphics[width=2in]{../figures/qpm.png}\footnotemark[2]
\begin{gather*}
\omega_p+\omega_s = \omega_r\\
\beta_p+\beta_s+2\pi/\Lambda = \beta_r
\end{gather*}
\end{figure}
\end{column}
\end{columns}
\footnotetext[1]{J. Huang and P. Kumar, Phys. Rev. Lett, 68, 2153 (1992).}
\footnotetext[2]{M. G. Raymer and K. Srinivasan, Physics Today, 11, 32 (2012).}
\end{frame}

\begin{frame}{Coupled-mode equations in $\chi^{(2)}$ waveguides}
\begin{columns}
\begin{column}{.5\linewidth}
\begin{figure}[htb]
\centering
\includegraphics[width=1.6in]{../figures/sfg.png}
\end{figure}
\end{column}
\begin{column}{.5\linewidth}
\begin{figure}[htb]
\centering
\includegraphics[width=1.6in]{../figures/dfg.png}
\end{figure}
\end{column}
\end{columns}
%\pause
\begin{equation*}
E_j(z,t)=\int d\omega \widetilde{A_j}(z,\omega)e^{i(\beta(\omega)z-\omega t)} \approx A_j(t-\beta_j' z)e^{i(\beta_jz-\omega_j t)} \quad\text{if undepleted}
\end{equation*}

\begin{block}{Coupled-mode equations for frequency conversion\footnotemark}
\begin{gather*}
(\partial_z-\beta'_r\partial_t)A_r(z,t) = i \gamma e^{i(\beta_p+\beta_s-\beta_r+2\pi/\Lambda)z} A_p(t-\beta_p'z)A_s(z,t)\\
(\partial_z-\beta'_s\partial_t)A_s(z,t) = i \gamma e^{-i(\beta_p+\beta_s-\beta_r+2\pi/\Lambda)z} A^*_p(t-\beta_p'z)A_r(z,t)\\
\end{gather*}
\end{block}
%\vspace{5pt}
\footnotetext[3]{D. V. Reddy, M. G. Raymer, C. J. McKinstrie, L. Mejling, and K. Rottwitt, Opt. Express 21, 13840 (2013).}
\end{frame}

\begin{frame}%{Green function formalism}
\begin{columns}
\begin{column}{.55\linewidth}
\begin{gather*}
A_j(L,t)=\int dt'\sum\limits_{k=r,s}G_{jk}(t,t')A_k(0,t')\\
\text{Employing singular value decomposition (SVD)}\footnotemark\\
G_{rr}(t,t') = \sum\limits_n\tau_n\Psi_{n}(t)\psi_{n}^*(t')\\
G_{rs}(t,t') = \sum\limits_n\rho_n\Psi_{n}(t)\phi_{n}^*(t')\\
G_{ss}(t,t') = \sum\limits_n\tau_n^*\Phi_{n}(t)\phi_{n}^*(t')\\
G_{sr}(t,t') = -\sum\limits_n\rho_n^*\Phi_{n}(t)\psi_{n}^*(t')\\
\tau_n^2+\rho_n^2=1,\quad \rho_1\ge\rho_2\ge\rho_3\ge....
\end{gather*}
%\pause
$n$-th Schmidt mode conversion efficiency $=\rho_n^2$.
Ideally, $\rho_n=\delta_{n1}$.
\end{column}
\begin{column}{.35\linewidth}
%\pause
\begin{figure}[htb]
\centering
$G_{rs}(t,t')$ for various $\gamma$
\includegraphics[width=1.75in]{../figures/figx3}\footnotemark
\end{figure}
\end{column}
\end{columns}
\footnotetext[4]{M. G. Raymer, S. J. van Enk, C. J. McKinstrie, and H. J. McGuinness, Opt. Commun. 283, 747 (2010).}
\footnotetext[5]{D. V. Reddy, M. G. Raymer, C. J. McKinstrie, L. Mejling, and K. Rottwitt, Opt. Express 21, 13840 (2013).}
\end{frame}

\subsection{Schmidt modes and Selectivity}

\begin{frame}
Free parameters: $\left[\gamma\sqrt{L/\beta'_{rs}}\right]$, $\left[\beta'_{rp}/\beta'_{sp}\right]$, $\left[\beta'_{rs}L/\tau_p\right]$, and pump shape. ($\beta'_{jk}=\beta'_j-\beta'_k$)
\begin{alertblock}{Temporal-mode Selectivity:\footnotemark[5]}
\begin{center}
$S = \rho_1^4\bigg/\left(\sum\limits_n\rho_n^2\right)$
\end{center}
\end{alertblock}
%\pause
\begin{columns}
\begin{column}{.5\linewidth}
\begin{figure}[htb]
\centering Conversion efficiencies for\\ `Single sideband velocity
matched regime'\\ ($\beta'_{sp}=0$, $\beta'_{rs}L/\tau_p=20$):
\includegraphics[width=2.1in]{../figures/fig006}\footnotemark[5]
\end{figure}
\end{column}
\begin{column}{.5\linewidth}
\begin{figure}[htb]
\centering
%\vspace{10pt}
Universality curve for $\tau_p=0.1$,\\`Single sideband velocity
matched regime'\\ ($\overline\gamma = \gamma/\beta'_{rs}$):
\includegraphics[width=2.in]{../figures/figx4}\footnotemark[5]
\end{figure}
\end{column}
\end{columns}
\footnotetext[5]{D. V. Reddy, M. G. Raymer, C. J. McKinstrie, L. Mejling, and K. Rottwitt, Opt. Express 21, 13840 (2013).}
\end{frame}

\section{Temporal-mode interferometry}
\subsection{Proof of concept}
